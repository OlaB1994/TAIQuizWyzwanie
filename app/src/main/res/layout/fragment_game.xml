<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Fragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_menu_score_height"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fragment_game_my_username_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/fragment_menu_user_name_placeholder"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/medium_text_size" />

        <TextView
            android:id="@+id/fragment_game_result_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/fragment_menu_result_placeholder"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/toolbar_text_size" />

        <TextView
            android:id="@+id/fragment_game_opponent_username_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/fragment_menu_user_name_placeholder"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/medium_text_size" />
    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_game_round_results_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/fragment_menu_score_height"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/fragment_game_surrender_btn"
            android:layout_width="@dimen/fragment_menu_button_width"
            android:layout_height="@dimen/fragment_name_small_button_height"
            android:layout_margin="@dimen/normal_margin"
            android:background="@drawable/button_bg"
            android:text="@string/fragment_menu_surrender_text" />

        <Button
            android:id="@+id/fragment_game_play_btn"
            android:layout_width="@dimen/fragment_menu_button_width"
            android:layout_height="@dimen/fragment_name_big_button_height"
            android:layout_margin="@dimen/normal_margin"
            android:background="@drawable/button_bg"
            android:text="@string/fragment_menu_play_text" />

    </LinearLayout>

</LinearLayout>