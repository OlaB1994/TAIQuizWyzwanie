<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_margin="@dimen/normal_margin"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/fragment_question_indicator_width"
            android:layout_margin="@dimen/normal_margin"
            android:id="@+id/fragment_question_first_indicator_iv"
            android:layout_height="@dimen/fragment_question_indicator_height" />
        <ImageView
            android:layout_width="@dimen/fragment_question_indicator_width"
            android:layout_margin="@dimen/normal_margin"
            android:id="@+id/fragment_question_second_indicator_iv"
            android:layout_height="@dimen/fragment_question_indicator_height" />
        <ImageView
            android:layout_width="@dimen/fragment_question_indicator_width"
            android:layout_margin="@dimen/normal_margin"
            android:id="@+id/fragment_question_third_indicator_iv"
            android:layout_height="@dimen/fragment_question_indicator_height" />
    </LinearLayout>

    <pl.polsl.quizwyzwanie.views.QuizTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/toolbar_text_size"
        android:layout_gravity="center"
        android:id="@+id/fragment_question_category_name_tv"
        android:text="@string/fragment_category_name_placeholder"/>

    <pl.polsl.quizwyzwanie.views.QuizTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/medium_text_size"
        android:layout_gravity="center"
        android:layout_margin="@dimen/normal_margin"
        android:id="@+id/fragment_question_question_tv"
        android:text="@string/fragment_category_name_placeholder"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
        android:layout_width="@dimen/fragment_question_answer_size"
        android:layout_margin="@dimen/normal_margin"
        android:id="@+id/fragment_question_answer_a_btn"
        android:layout_height="@dimen/fragment_question_answer_size" />

        <Button
            android:layout_width="@dimen/fragment_question_answer_size"
            android:layout_margin="@dimen/normal_margin"
            android:id="@+id/fragment_question_answer_b_btn"
            android:layout_height="@dimen/fragment_question_answer_size" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="@dimen/fragment_question_answer_size"
            android:layout_margin="@dimen/normal_margin"
            android:id="@+id/fragment_question_answer_c_btn"
            android:layout_height="@dimen/fragment_question_answer_size" />

        <Button
            android:layout_width="@dimen/fragment_question_answer_size"
            android:layout_margin="@dimen/normal_margin"
            android:id="@+id/fragment_question_answer_d_btn"
            android:layout_height="@dimen/fragment_question_answer_size" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/fragment_question_timer_pb"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:max="100"
        android:progress="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_margin"
        />


</LinearLayout>