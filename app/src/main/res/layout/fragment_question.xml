<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Fragment">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/fragment_menu_score_height"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/normal_margin">

        <ImageView
            android:id="@+id/fragment_question_first_indicator_iv"
            android:layout_width="@dimen/fragment_question_indicator_width"
            android:layout_height="@dimen/fragment_question_indicator_height"
            android:layout_margin="@dimen/normal_margin"
            android:src="@drawable/entry_games_undefined" />

        <ImageView
            android:id="@+id/fragment_question_second_indicator_iv"
            android:layout_width="@dimen/fragment_question_indicator_width"
            android:layout_height="@dimen/fragment_question_indicator_height"
            android:layout_margin="@dimen/normal_margin"
            android:src="@drawable/entry_games_undefined" />

        <ImageView
            android:id="@+id/fragment_question_third_indicator_iv"
            android:layout_width="@dimen/fragment_question_indicator_width"
            android:layout_height="@dimen/fragment_question_indicator_height"
            android:layout_margin="@dimen/normal_margin"
            android:src="@drawable/entry_games_undefined" />
    </LinearLayout>

    <TextView
        android:id="@+id/fragment_question_question_tv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/normal_margin"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:text="@string/fragment_category_name_placeholder"
        android:textSize="@dimen/large_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/fragment_question_answer_a_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/normal_margin"
            android:layout_weight="1"
            android:background="@drawable/button_bg"
            tools:ignore="NestedWeights" />

        <Button
            android:id="@+id/fragment_question_answer_b_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/normal_margin"
            android:layout_weight="1"
            android:background="@drawable/button_bg" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/fragment_question_answer_c_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/normal_margin"
            android:layout_weight="1"
            android:background="@drawable/button_bg" />

        <Button
            android:id="@+id/fragment_question_answer_d_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/normal_margin"
            android:layout_weight="1"
            android:background="@drawable/button_bg" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/fragment_question_timer_pb"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="@dimen/normal_margin"
        android:max="100"
        android:progress="100" />


</LinearLayout>