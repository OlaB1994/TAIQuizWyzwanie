<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_main_toolbar_height"
        android:background="@color/toolbar_bg"
        android:id="@+id/activity_main_toolbar_ll"
        android:orientation="horizontal">

        <pl.polsl.quizwyzwanie.views.QuizTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/normal_margin"
            android:layout_weight="1"
            android:textSize="@dimen/toolbar_text_size"
            android:text="@string/app_name" />

        <ImageButton
            android:id="@+id/activity_main_refresh_ib"
            android:layout_width="@dimen/activity_main_toolbar_button_size"
            android:layout_height="@dimen/activity_main_toolbar_button_size"
            android:layout_gravity="center"
            android:layout_margin="@dimen/normal_margin" />

        <ImageButton
            android:id="@+id/actiity_main_stats_ib"
            android:layout_width="@dimen/activity_main_toolbar_button_size"
            android:layout_height="@dimen/activity_main_toolbar_button_size"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/normal_margin" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/activity_main_fragment_container_fl"
        android:layout_height="match_parent"/>

</LinearLayout>